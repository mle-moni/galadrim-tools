{
    "name": "galadrim-tools",
    "version": "3.6.0",
    "license": "GPLv2",
    "scripts": {
        "dev": "concurrently --kill-others \"pnpm --filter @galadrim-tools/shared dev\" \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
        "dev:frontend": "pnpm --filter frontend dev",
        "dev:backend": "pnpm --filter backend dev",
        "dev:shared": "pnpm --filter @galadrim-tools/shared dev",
        "deploy": "git pull && ./deployAll.sh",
        "test:backend": "pnpm --filter backend test",
        "test:frontend": "pnpm --filter frontend test",
        "test": "pnpm test:backend && pnpm test:frontend",
        "build:frontend": "pnpm --filter frontend build",
        "build:backend": "pnpm --filter backend build",
        "build:shared": "pnpm --filter @galadrim-tools/shared build",
        "migrate-prod": "pnpm --filter backend migrate-prod",
        "deploy:backend": "pnpm --filter backend deploy",
        "deploy:frontend:nobuild": "pnpm --filter frontend deploy",
        "deploy:frontend": "git pull && pnpm build:shared && pnpm build:frontend && pnpm --filter frontend deploy",
        "biome:backend:check": "pnpm --filter backend lint-check && pnpm --filter backend format-check",
        "biome:shared:check": "pnpm --filter @galadrim-tools/shared lint-check && pnpm --filter @galadrim-tools/shared format-check",
        "biome:frontend:check": "pnpm --filter frontend lint-check && pnpm --filter frontend format-check",
        "biome:check": "pnpm biome:backend:check && pnpm biome:shared:check && pnpm biome:frontend:check"
    },
    "private": true,
    "workspaces": ["apps/*", "libs/*"],
    "author": "LE MONIES DE SAGAZAN Mayeul",
    "devDependencies": {
        "@biomejs/biome": "1.8.3",
        "concurrently": "^7.6.0"
    },
    "pnpm": {
        "onlyBuiltDependencies": ["@biomejs/biome", "@swc/core", "argon2", "esbuild"]
    },
    "packageManager": "pnpm@10.0.0"
}
