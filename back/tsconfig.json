{
    "extends": "./node_modules/adonis-preset-ts/tsconfig",
    "include": [
        "**/*"
    ],
    "exclude": [
        "node_modules",
        "build"
    ],
    "compilerOptions": {
        "outDir": "build",
        "rootDir": "./",
        "sourceMap": true,
        "paths": {
            "App/*": [
                "./app/*"
            ],
            "Config/*": [
                "./config/*"
            ],
            "Contracts/*": [
                "./contracts/*"
            ],
            "Database/*": [
                "./database/*"
            ]
        },
        "types": [
            "@adonisjs/core",
            "@adonisjs/repl",
            "@adonisjs/lucid",
            "@adonisjs/auth",
            "@adonisjs/session",
            "@adonisjs/mail",
            "@adonisjs/view",
            "@japa/preset-adonis/build/adonis-typings"
        ]
    }
}
