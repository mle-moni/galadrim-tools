{
    "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
    "organizeImports": {
        "enabled": true
    },
    "files": {
        "ignore": ["dist", "node_modules", "build", "apps/frontend/src/routeTree.gen.ts"]
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "a11y": {
                "noSvgWithoutTitle": "off",
                "useAltText": "off",
                "useKeyWithClickEvents": "off"
            },
            "style": {
                "noNonNullAssertion": "off"
            },
            "complexity": {
                "noForEach": "off"
            }
        }
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineWidth": 100,
        "lineEnding": "lf"
    }
}
