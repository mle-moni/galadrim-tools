{
    "name": "backend",
    "version": "0.0.0",
    "private": true,
    "type": "module",
    "license": "UNLICENSED",
    "scripts": {
        "start": "node bin/server.js",
        "build": "node ace build",
        "dev": "node ace serve --watch",
        "test": "node ace test",
        "format": "biome format --write",
        "format-check": "biome format",
        "lint": "biome lint --write",
        "lint-check": "biome lint",
        "migrate-prod": "node ace migration:run --force",
        "deploy": "./scripts/deploy.sh",
        "typecheck": "tsc --noEmit"
    },
    "imports": {
        "#adomin/*": "./app/adomin/*.js",
        "#controllers/*": "./app/controllers/*.js",
        "#exceptions/*": "./app/exceptions/*.js",
        "#models/*": "./app/models/*.js",
        "#mails/*": "./app/mails/*.js",
        "#services/*": "./app/services/*.js",
        "#listeners/*": "./app/listeners/*.js",
        "#events/*": "./app/events/*.js",
        "#middleware/*": "./app/middleware/*.js",
        "#validators/*": "./app/validators/*.js",
        "#providers/*": "./providers/*.js",
        "#policies/*": "./app/policies/*.js",
        "#abilities/*": "./app/abilities/*.js",
        "#database/*": "./database/*.js",
        "#start/*": "./start/*.js",
        "#tests/*": "./tests/*.js",
        "#config/*": "./config/*.js"
    },
    "devDependencies": {
        "@adonisjs/assembler": "^7.7.0",
        "@adonisjs/eslint-config": "^1.3.0",
        "@adonisjs/prettier-config": "^1.3.0",
        "@adonisjs/tsconfig": "^1.3.0",
        "@faker-js/faker": "^10.1.0",
        "@japa/api-client": "^2.0.3",
        "@japa/assert": "^3.0.0",
        "@japa/plugin-adonisjs": "^3.0.1",
        "@japa/runner": "^3.1.4",
        "@swc/core": "^1.6.5",
        "@types/luxon": "^3.4.2",
        "@types/node": "^20.14.9",
        "eslint": "^8.57.0",
        "hot-hook": "^0.2.6",
        "pino-pretty": "^11.2.1",
        "prettier": "^3.3.2",
        "ts-node": "^10.9.2",
        "typescript": "~5.4"
    },
    "dependencies": {
        "@adonisjs/auth": "^9.2.3",
        "@adonisjs/bouncer": "^3.1.3",
        "@adonisjs/core": "^6.12.1",
        "@adonisjs/cors": "^2.2.1",
        "@adonisjs/lucid": "^21.1.0",
        "@adonisjs/mail": "^9.2.2",
        "@adonisjs/session": "^7.4.2",
        "@adonisjs/static": "^1.1.1",
        "@adonisjs/validator": "^13.0.2",
        "@galadrim-tools/shared": "workspace:*",
        "@kitajs/html": "^4.1.0",
        "@vinejs/vine": "^2.1.0",
        "argon2": "^0.40.3",
        "axios": "^1.7.2",
        "edge.js": "^6.2.0",
        "luxon": "^3.4.4",
        "mysql2": "^3.10.3",
        "nanoid": "^5.1.6",
        "reflect-metadata": "^0.2.2",
        "socket.io": "^4.7.5",
        "ts-fsrs": "^4.1.2",
        "xlsx": "^0.18.5"
    },
    "hotHook": {
        "boundaries": ["./app/controllers/**/*.ts", "./app/middleware/*.ts"]
    },
    "eslintConfig": {
        "extends": "@adonisjs/eslint-config/app"
    },
    "prettier": "@adonisjs/prettier-config"
}
