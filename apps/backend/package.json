{
    "name": "backend",
    "private": true,
    "version": "3.3.0",
    "scripts": {
        "dev": "node ace serve --watch",
        "build": "node ace build --production",
        "start": "node server.js",
        "lint": "eslint . --ext=.ts",
        "format": "prettier --write .",
        "migrate-prod": "node ace migration:run --force",
        "deploy": "./scripts/deploy.sh",
        "test": "node ace test",
        "test:unit": "node ace test unit"
    },
    "eslintConfig": {
        "extends": [
            "plugin:adonis/typescriptApp",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "rules": {
            "prettier/prettier": [
                "error"
            ]
        }
    },
    "eslintIgnore": [
        "build"
    ],
    "prettier": {
        "trailingComma": "es5",
        "semi": false,
        "singleQuote": true,
        "useTabs": false,
        "quoteProps": "consistent",
        "bracketSpacing": true,
        "arrowParens": "always",
        "printWidth": 100
    },
    "devDependencies": {
        "@adonisjs/assembler": "^5.9.2",
        "@japa/preset-adonis": "^1.2.0",
        "@japa/runner": "^2.2.1",
        "adonis-preset-ts": "^2.1.0",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-adonis": "^2.1.1",
        "eslint-plugin-prettier": "^4.2.1",
        "pino-pretty": "^9.1.0",
        "prettier": "^2.7.1",
        "typescript": "~4.6",
        "youch": "^3.2.2",
        "youch-terminal": "^2.1.5"
    },
    "dependencies": {
        "@adonisjs/attachment-lite": "^1.0.7",
        "@adonisjs/auth": "^8.2.2",
        "@adonisjs/bouncer": "^2.3.0",
        "@adonisjs/core": "^5.8.0",
        "@adonisjs/drive-s3": "^1.3.1",
        "@adonisjs/lucid": "^18.1.1",
        "@adonisjs/mail": "^8.0.1",
        "@adonisjs/session": "^6.2.2",
        "@adonisjs/repl": "^3.1.0",
        "@adonisjs/view": "^6.1.4",
        "@faker-js/faker": "^7.6.0",
        "@sentry/node": "^7.15.0",
        "adonis5-sentry": "^3.1.0",
        "nanoid": "^3.3.3",
        "socket.io": "^4.5.0",
        "luxon": "^3.0.4",
        "mysql": "^2.18.1",
        "phc-argon2": "^1.1.3",
        "proxy-addr": "^2.0.7",
        "reflect-metadata": "^0.1.13",
        "source-map-support": "^0.5.21",
        "tslib": "^2.3.0"
    }
}
